<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourvitres</object-name>
    <object-name>inttourvitreG</object-name>
    <object-name>inttourvitreC</object-name>
    <object-name>inttourvitreD</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreC</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreC</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreC</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Messerschmitt-BF110/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -3.844 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.640 </z-m>
    </offsets>
  </model>

  <!-- Gunner -->
  <model>
    <path>Aircraft/Messerschmitt-BF110/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.708 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.599 </z-m>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Messerschmitt-BF110/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -4.480 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.652 </z-m>
    </offsets>
  </model>

  <!-- Canope -->
  <animation>
    <name>IntCanopeC</name>
    <object-name>intvitreC</object-name>
    <object-name>inttourvitreC</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntCanopeC</object-name>      
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 120 </factor>  
    <center>
      <x-m> -3.274 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.264 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>  

  <animation>
    <name>IntCanopeG</name>
    <object-name>intvitreG</object-name>
    <object-name>inttourvitreG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntCanopeG</object-name>      
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 150 </factor>  
    <center>
      <x-m> -3.654 </x-m>
      <y-m> -0.369 </y-m>
      <z-m>  0.672 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>  

  <animation>
    <name>IntCanopeD</name>
    <object-name>intvitreD</object-name>
    <object-name>inttourvitreD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntCanopeD</object-name>      
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -150 </factor>  
    <center>
      <x-m> -3.654 </x-m>
      <y-m>  0.369 </y-m>
      <z-m>  0.672 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>  

</PropertyList>

