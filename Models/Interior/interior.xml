<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>structure</object-name>
    <object-name>tuyau</object-name>
    <object-name>attaches</object-name>
    <object-name>arriere</object-name>
    <object-name>plaques</object-name>
    <object-name>seat</object-name>
    <object-name>sides</object-name>
    <object-name>fils</object-name>
    <object-name>boutons</object-name>
    <object-name>supportgun</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourvitres</object-name>
    <object-name>inttourvitreG</object-name>
    <object-name>inttourvitreC</object-name>
    <object-name>inttourvitreD</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreC</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreC</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreC</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreC</object-name>
    <object-name>intvitreD</object-name>
  </effect>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Messerschmitt-BF110/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -3.964 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.550 </z-m>
    </offsets>
  </model>

  <!-- Gunner -->
  <model>
    <path>Aircraft/Messerschmitt-BF110/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.91221 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.51871 </z-m>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Messerschmitt-BF110/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -4.480 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.652 </z-m>
    </offsets>
  </model>

  <!-- Pedals -->
  <model>
    <path>Aircraft/Messerschmitt-BF110/Models/Interior/Panel/Instruments/Pedals/pedals.xml</path>
    <offsets>
      <x-m> -4.55427 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.21456 </z-m>
    </offsets>
  </model>

  <!-- Gun -->
  <model>
    <path>Aircraft/Messerschmitt-BF110/Models/Interior/Guns/gun.xml</path>
    <offsets>
      <x-m> -1.12773 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.92856 </z-m>
    </offsets>
  </model>

  <!-- Canope -->
  <animation>
    <name>IntCanopeC</name>
    <object-name>intvitreC</object-name>
    <object-name>inttourvitreC</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntCanopeC</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntCanopeC</object-name>      
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 120 </factor>  
    <center>
      <x-m> -3.274 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.264 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>  

  <animation>
    <name>IntCanopeG</name>
    <object-name>intvitreG</object-name>
    <object-name>inttourvitreG</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntCanopeG</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntCanopeG</object-name>      
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 150 </factor>  
    <center>
      <x-m> -3.654 </x-m>
      <y-m> -0.369 </y-m>
      <z-m>  0.672 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>  

  <animation>
    <name>IntCanopeD</name>
    <object-name>intvitreD</object-name>
    <object-name>inttourvitreD</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntCanopeD</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntCanopeD</object-name>      
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> -150 </factor>  
    <center>
      <x-m> -3.654 </x-m>
      <y-m>  0.369 </y-m>
      <z-m>  0.672 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>  

</PropertyList>
